    <title>Registro</title>
</head>

<body>
    <center>
    <div class="data">
        <div class="card" style="width: 40%;">
            <div class="card-body">
            <h3 class="card-header">Ingrese Tarjeta</h3>
            <form action="/verifyTarjeta" method="post">
                <center>
                <label for="NumeroTarjeta">Numero Tarjeta</label> </br>
                <input id="NumeroTarjeta" type="number" name="NumeroTarjeta" placeholder="Ingrese"></br>
                <label for="PrimerApellido">Primer Apellido</label></br>
                <input id="PrimerApellido" type="text" name="PrimerApellido" placeholder="Ingrese"></br>
                <label for="SegundoApellido">Segundo Apellido </label></br>
                <input id="SegundoApellido" type="text" name="SegundoApellido" placeholder="Ingrese"></br>
                <label for="MMAA">MMAA</label></br>
                <input id="MMAA" type="number" name="MMAA" placeholder="Ingrese"></br>
                <label for="CVV">CVV</label></br>
                <input id="CVV" type="number" name="CVV" placeholder="Ingrese"></br>
                <label for="Nombre">Nombre</label></br>
                <input id="Nombre" type="text" name="Nombre" placeholder="Ingrese"></br>
                <label for="Email">Email</label></br>
                <input id="Email" type="text" name="Email" placeholder="Ingrese"></br>
                <input type="submit" class="btn btn-primary mt-2" value="REGISTRARSE">
            </center>
            </form>
        </div>
        </div>
    </div>
</center>
</body>

